<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Se connecter{% endblock %}</title>
        <!-- CSS - Main -->
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <!-- CSS - Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="body-bg-gradient">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-login my-5 shadow">
                        <div class="card-body m-3">
                            {% block body %}
                                <img class="img-fluid mb-4" src="{{ asset('image/logo.png') }}">
                                <div class="text-center mb-4">
                                    <h4>Connexion</h4>
                                </div>
                                
                                <form class="login" action="{{ path('login_check') }}" method="post">
                                    <div class="form-group ">
                                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Nom d'utilisateur">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe">
                                    </div>
                                    {% if error %}
                                        <div class="alert alert-danger">
                                            {{ error.messageKey | trans(error.messagedata, 'security') }}
                                        </div>
                                    {% endif %}
                                    <a class="text-right" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
                                    <button type="submit" class="btn btn-primary btn-block">Se connecter</button>

                                    <input type="hidden" name="_target_path" value="login">
                                </form>
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {% block javascripts %}{% endblock %}
        <!-- JS - Bootstrap -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    </body>
</html>