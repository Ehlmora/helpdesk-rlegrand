{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}

<div class="col-lg-6">
    <div class="card shadow m-3">
        <div class="card-header">
            <h6>{{ block('title') }}</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">{{ form_row(form.firstname) }}</div>
                    <div class="col-6">{{ form_row(form.lastname) }}</div>
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.address) }}</div>
                </div>
                <div class="row">
                    <div class="col-6">{{ form_row(form.city) }}</div>
                    <div class="col-6">{{ form_row(form.postalCode) }}</div>
                </div>
                <div class="row">
                    <div class="col-6">{{ form_row(form.phone) }}</div>
                    <div class="col-6">{{ form_row(form.mail) }}</div>
                </div>
                <div class="row">
                    {#<div class="col-12">{{ form_row(form.role) }}</div>#}
                </div>
                <div class="row">
                    <div class="col-12">{{ form_row(form.description) }}</div>
                </div>
                <button class="btn btn-primary btn-block">Ajouter</button>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>

{% endblock %}
